- talks.sorted_talks.each do |t|
  == link_to '/' + t.path, :class => planner_classes(t.data).join(" ")
      div.item-container
        .talk_room == t.data.room
        .talk_title == t.data.title
        span.speaker
          = t.data.speaker
          - if t.preview
            |  
            i.fa.fa-video-camera
          - if t.notes.present?
            |  
            i.fa.fa-pencil-square-o
      div.forward-arrow
        <i class="fa fa-chevron-right"></i>
